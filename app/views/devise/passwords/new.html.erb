<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="col-xs-6 col-centered">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email address" %>
        </div>
        <%= f.submit t('.send_me_reset_password_instructions', :default => "Send it to me!"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
