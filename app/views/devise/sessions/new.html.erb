<div class="col-xs-6 col-centered">
  <div class="panel panel-default square_corners">
    <div class="panel-heading">
      <h4><%= t('.sign_in', :default => "Sign in") %></h4>
    </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control square_corners", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control square_corners", placeholder: "Password" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
            </div>
          <% end %>
          <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-sm btn-primary square_corners" %>

          <%= link_to omniauth_authorize_path(resource_name, :github), class: "btn btn-sm btn-primary square_corners" do %>
            <i class="fa fa-lg fa-github"></i>
            <%= t('.sign_in_with_provider', provider: "github".titleize, :default => "Sign in with Github") %>
          <% end %>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name) %>
          <% end -%>
        <% end %>
      </div>
    </div>
  </div>
</div>
