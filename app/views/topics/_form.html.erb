<div class="content">
  <%= form_for(@topic) do |f| %>
    <% if @topic.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

        <ul>
        <% @topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form_control" %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form_control" %>
    </div>
    <div class="field">
      <%= f.label :focus_area %><br>
      <%= f.text_field :focus_area, class: "form_control" %>
    </div>

    <%= fields_for :interest, @topic.interests.new do |i| %>
      <div class="field">
        <%= i.label :score %>
        <%= i.text_field :score %>
      </div>
      <div class="field">
        <%= i.label :comment %>
        <%= i.text_area :comment %>
      </div>
      <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
</div>
