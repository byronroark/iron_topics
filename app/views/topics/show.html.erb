<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @topic.description %>
</p>

<p>
  <strong>Focus area:</strong>
  <%= @topic.focus_area %>
</p>

<ul>
  <% @topic.interests.each do |interest| %>
  <li><%= interest.score %> by <%= interest.user.name %> who said <%= interest.comment %></li>
  <% end %>
</ul>
<%= form_for(@topic.interests.new) do |f| %>
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <div class="field">
    <%= f.label :score %>
    <%= f.text_field :score %>
  </div>
  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>
  <%= f.submit %>
<% end %>


<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
